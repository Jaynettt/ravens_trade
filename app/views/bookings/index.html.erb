<div class="container mt-5">
  <!-- Section 1: Your Bookings List -->
  <h1 class="mb-4">My Relic Reservations</h1>
  <div class="bookings container">
    <ol class="list-group">
      <% @my_bookings.each do |booking| %>
        <li class="list-group-item mb-3">
          <div class="d-flex">
            <!-- Display the image of the booked item -->
            <div class="me-3">
              <%= cl_image_tag booking.good.photo.key, height: 150, width: 200, crop: :fill, class: "rounded" %>
            </div>
            <!-- Display booking details -->
            <div>
              <h4><%= booking.good.name %></h4>
              <p><strong>From:</strong> <%= booking.start_date %></p>
              <p><strong>To:</strong> <%= booking.end_date %></p>
              <p><strong>Duration (days):</strong> <%= booking.duration %></p>
              <p><strong>Total price:</strong> <%= booking.total_price %> Silver Stags</p>
              <p><strong>Status:</strong>
                <% if booking.status == 0 %>
                  Pending
                <% elsif booking.status == 1 %>
                  Accepted
                <% else %>
                  Declined
                <% end %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ol>
    <% if @my_bookings.empty? %>
      <p>No relic reservations yet.</p>
    <% end %>
  </div>
</div>
