<div class="container">
  <div class="welcome-container">
    <h1 class="mt-4">Welcome to Raven's Trade </h1>
    <%# <br> %>
    <p><i>In the shadows of power, where whispers travel on the wings of ravens, fortunes are made!</i></p>
    <br>
  </div>
<h2 class="m-5 text-center">Treasures of the Seven Kingdoms</h2>
<div class="grid-container mb-3">
    <% @goods.each do |good| %>
      <%= link_to good_path(good) do %>
        <div class="card" style="width: 23rem;">
          <div class="card-body">
            <div  class="container card-img-top py-4">
              <div class="image-card">
                <%= cl_image_tag good.photo.key, crop: :fill %>
                <div class="overlay-text"> 
                  <%=  good.name %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
</div>

</div>